[user]
	name = Thomas Maurer
	email = tma@github.com

[protocol]
	version = 2

[color]
	diff = auto
	status = auto
	branch = auto
	ui = auto
	interactive = auto

[alias]
	st = status
	ci = commit
	co = checkout
	b = branch
	p = push
	f = fetch
	d = diff
	l = log
	mt = mergetool
	pl = pull
	rb = rebase
	cp = cherry-pick
	cleanup = !git branch --merged master | grep -v 'master$' | xargs git branch -d
	log-graph = log --graph --abbrev-commit --decorate
	branches = for-each-ref --sort=-committerdate --format=\"%(color:blue)%(authordate:relative)\t%(color:red)%(authorname)\t%(color:white)%(color:bold)%(refname:short)\" refs/heads

[core]
	editor = code -w

	# Make `git rebase` safer on OS X
	# More info: <http://www.git-tower.com/blog/make-git-rebase-safe-on-osx/>
	trustctime = false

	# Prevent showing files whose names contain non-ASCII symbols as unversioned.
	# http://michael-kuehnel.de/git/2014/11/21/git-mac-osx-and-german-umlaute.html
	precomposeunicode = false

[push]
	default = current

[fetch]
	prune = true

[branch]
	autosetupmerge = always
	autosetuprebase = always

[mergetool]
	keepBackup = false

[help]
	# Automatically correct and execute mistyped commands
	autocorrect = 1

[github]
	user = tma
