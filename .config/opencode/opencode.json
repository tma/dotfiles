{
  "$schema": "https://opencode.ai/config.json",
  "theme": "github",
  "model": "github-copilot/claude-opus-4-6",
  "autoupdate": true,
  "share": "disabled",
  "instructions": [
    "Never Git push without explicit permission!",
    "When you need to look up documentation for libraries, frameworks, or APIs, use the context7 MCP tools.",
    "When searching for open source code examples, implementations, or GitHub issues, use the github MCP tools."
  ],
  "permission": {
    "bash": {
      "git push *": "ask"
    },
    "edit": {
      "doc/plans/*.md": "allow"
    }
  },
  "watcher": {
    "ignore": [
      "node_modules/**",
      "dist/**",
      ".git/**",
      "**/*.log",
      "*.sqlite",
      "**/*.sqlite",
      "**/*.sqlite*",
      "*.sqlite3",
      "**/*.sqlite3",
      "**/*.sqlite3*",
      "tmp/**",
      "vendor/**/*"
    ]
  },
  "mcp": {
    "context7": {
      "type": "remote",
      "url": "https://mcp.context7.com/mcp",
      "enabled": true
    },
    "duckduckgo": {
      "type": "local",
      "command": ["docker", "run", "-i", "--rm", "mcp/duckduckgo"],
      "enabled": true
    },
    "github": {
      "type": "local",
      "command": ["sh", "-c", "docker run -i --rm -e GITHUB_PERSONAL_ACCESS_TOKEN=$(gh auth token) ghcr.io/github/github-mcp-server"],
      "enabled": true
    }
  }
}
