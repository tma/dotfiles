{
  "$schema": "https://opencode.ai/config.json",
  "theme": "github",
  "model": "github-copilot/claude-opus-4-5",
  "autoupdate": true,
  "share": "disabled",
  "watcher": {
    "ignore": [
      "node_modules/**",
      "dist/**",
      ".git/**",
      "*.log",
      "*.sqlite",
      "*.sqlite3",
      "vendor/**"
    ]
  },
  "mcp": {
    "context7": {
      "type": "remote",
      "url": "https://mcp.context7.com/mcp",
      "enabled": true
    }
  }
}
